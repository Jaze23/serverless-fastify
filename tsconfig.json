{
  "compilerOptions": {
    "declaration": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "rootDir": "src"
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules", "dist", "examples"]
}
